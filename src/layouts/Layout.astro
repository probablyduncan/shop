---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Shop.DuncanPetrie.com</title>

		<link
			rel="preload"
			href="/fonts/inter.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/inter-italic.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/junicode.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
	</head>
	<body
		class:list={[
			// "dark",
			"font-sans",
			"overflow-x-hidden",
			"text-black dark:text-white bg-white dark:bg-black",
		]}
	>
		<slot />
	</body>
</html>
<script>
	document.addEventListener("keydown", (_e) => {
		if (_e.shiftKey === true && _e.key === "D") {
			document.body.classList.toggle("dark");
		}
	});
</script>
